<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.SprAutNote.AppWidgetContainer">
    <RelativeLayout
        android:layout_width="948px"
        android:layout_height="450px"
        android:background="@drawable/bg_main_widget"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/padding_widget"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_widget_object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推送"
                    style="@style/TextStyleObject"
                    android:layout_alignParentTop="true"
                    />
                <TextView
                    android:id="@+id/tv_widget_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天"
                    style="@style/TextStyleRemainTime"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_widget_event"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="内容做期中考试相关的"
                style="@style/TextStyleEvent"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_widget_date"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="2021年11月2日"
                style="@style/TextStyleTime"
                />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>