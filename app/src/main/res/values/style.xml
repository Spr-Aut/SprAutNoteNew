<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--主界面顶部时间-->
    <style name="TextStyleBarMainTop">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--按钮-->
    <style name="BtnStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rectangle_solid</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <!--图标按钮-->
    <style name="BtnIvStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rectangle_solid</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <!--对象-->
    <style name="TextStyleObject">
        <item name="android:textColor">@color/main_typeface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <!--事件-->
    <style name="TextStyleEvent">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--剩余时间-->
    <style name="TextStyleRemainTime">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle26">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextStyleTime">

        <item name="android:textSize">14sp</item>
    </style>


</resources>